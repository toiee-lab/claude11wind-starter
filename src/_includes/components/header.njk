<!-- Header with sticky navigation -->
<header class="fixed top-0 left-0 right-0 z-40 transition-all duration-300 ease-in-out" id="header">
    <nav class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-16">
            <!-- Logo -->
            <div class="flex-shrink-0">
                <a href="/" class="logo-link transition-all duration-200">
                    <img 
                        src="/assets/images/c11w-logo.png" 
                        alt="Claude11Wind Starter" 
                        class="h-8"
                        loading="eager"
                        decoding="sync"
                    >
                </a>
            </div>

            <!-- Desktop Navigation -->
            <div class="hidden md:block">
                <div class="ml-10 flex items-baseline space-x-8">
                    {% for item in navigation %}
                    <a href="{{ item.url }}" 
                       class="nav-link px-3 py-2 rounded-md text-sm font-medium transition-all duration-200 {% if page.url == item.url %}nav-link-active font-bold{% endif %}">
                        {{ item.text }}
                    </a>
                    {% endfor %}
                </div>
            </div>

            <!-- Mobile menu button -->
            <div class="md:hidden">
                <button type="button" 
                        class="mobile-menu-button inline-flex items-center justify-center p-2 rounded-md transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-inset"
                        aria-controls="mobile-menu" 
                        aria-expanded="false"
                        onclick="toggleMobileMenu()">
                    <span class="sr-only">メニューを開く</span>
                    <!-- Menu icon -->
                    <i data-lucide="menu" class="h-6 w-6 block menu-icon"></i>
                    <!-- Close icon -->
                    <i data-lucide="x" class="h-6 w-6 hidden close-icon"></i>
                </button>
            </div>
        </div>

        <!-- Mobile menu -->
        <div class="md:hidden hidden" id="mobile-menu">
            <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3 bg-white/95 backdrop-blur-md rounded-lg mt-2 shadow-lg">
                {% for item in navigation %}
                <a href="{{ item.url }}" 
                   class="block px-3 py-2 rounded-md text-base font-medium transition-all duration-200 hover:text-primary-600 hover:bg-gray-50 {% if page.url == item.url %}text-primary-600 font-bold bg-primary-50{% else %}text-gray-700{% endif %}">
                    {{ item.text }}
                </a>
                {% endfor %}
            </div>
        </div>
    </nav>
</header>


<style>
    /* Header transparent state - initial state over hero */
    #header {
        background: transparent;
        backdrop-filter: none;
        color: var(--color-gray-900);
    }

    /* Logo styling */
    #header .logo-link {
        color: var(--color-gray-900);
    }

    #header .logo-link:hover {
        opacity: 0.8;
        transform: scale(1.05);
    }

    /* Navigation links - initial transparent state */
    #header .nav-link {
        color: var(--color-gray-700);
        position: relative;
    }

    #header .nav-link:hover {
        color: var(--color-primary-600);
    }

    #header .nav-link-active {
        color: var(--color-primary-600);
        font-weight: 700;
    }

    /* Mobile menu button - initial state */
    #header .mobile-menu-button {
        color: var(--color-gray-700);
        border: 1px solid rgba(0, 0, 0, 0.2);
    }

    #header .mobile-menu-button:hover {
        color: var(--color-primary-600);
        background: rgba(0, 0, 0, 0.05);
        border-color: var(--color-primary-300);
    }

    #header .mobile-menu-button:focus {
        ring-color: var(--color-primary-500);
    }

    /* Header scrolled state - blur background with proper contrast */
    #header.scrolled {
        background: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        border-bottom: 1px solid rgba(0, 0, 0, 0.1);
        box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
    }

    /* Logo - scrolled state */
    #header.scrolled .logo-link {
        color: var(--color-gray-950);
    }

    #header.scrolled .logo-link:hover {
        color: var(--color-primary-600);
    }
    
    /* Navigation links - scrolled state */
    #header.scrolled .nav-link {
        color: var(--color-gray-700);
    }
    
    #header.scrolled .nav-link:hover {
        color: var(--color-primary-600);
    }
    
    #header.scrolled .nav-link-active {
        color: var(--color-primary-600);
        font-weight: 700;
    }
    
    /* Mobile menu button - scrolled state */
    #header.scrolled .mobile-menu-button {
        color: var(--color-gray-700);
        border-color: rgba(0, 0, 0, 0.1);
    }
    
    #header.scrolled .mobile-menu-button:hover {
        color: var(--color-primary-600);
        background: rgba(0, 0, 0, 0.05);
        border-color: var(--color-primary-300);
    }

    #header.scrolled .mobile-menu-button:focus {
        ring-color: var(--color-primary-500);
    }

    /* Dark mode support */
    @media (prefers-color-scheme: dark) {
        #header.scrolled {
            background: rgba(17, 24, 39, 0.9);
            border-bottom-color: rgba(255, 255, 255, 0.1);
        }

        #header.scrolled .logo-link {
            color: var(--color-gray-100);
        }

        #header.scrolled .logo-link:hover {
            color: var(--color-primary-400);
        }

        #header.scrolled .nav-link {
            color: var(--color-gray-300);
        }
        
        #header.scrolled .nav-link:hover {
            color: var(--color-primary-400);
        }
        
        #header.scrolled .nav-link-active {
            color: var(--color-primary-400);
        }

        #header.scrolled .mobile-menu-button {
            color: var(--color-gray-300);
            border-color: rgba(255, 255, 255, 0.1);
        }
        
        #header.scrolled .mobile-menu-button:hover {
            color: var(--color-primary-400);
            background: rgba(255, 255, 255, 0.05);
            border-color: var(--color-primary-600);
        }
    }

    /* Navigation link hover effects - underline animation */
    .nav-link::after {
        content: '';
        position: absolute;
        bottom: -4px;
        left: 50%;
        width: 0;
        height: 2px;
        background: currentColor;
        transition: all 0.3s ease;
        transform: translateX(-50%);
    }

    .nav-link:hover::after,
    .nav-link-active::after {
        width: 100%;
    }

    /* Enhanced accessibility and interaction */
    .nav-link:focus,
    .logo-link:focus {
        outline: 2px solid currentColor;
        outline-offset: 2px;
    }
</style>

<script>
    // Header scroll behavior
    window.addEventListener('scroll', function() {
        const header = document.getElementById('header');
        if (window.scrollY > 10) {
            header.classList.add('scrolled');
        } else {
            header.classList.remove('scrolled');
        }
    });

    // Mobile menu toggle
    function toggleMobileMenu() {
        const mobileMenu = document.getElementById('mobile-menu');
        const menuIcon = document.querySelector('.menu-icon');
        const closeIcon = document.querySelector('.close-icon');
        const button = document.querySelector('.mobile-menu-button');
        
        if (mobileMenu.classList.contains('hidden')) {
            mobileMenu.classList.remove('hidden');
            menuIcon.classList.add('hidden');
            closeIcon.classList.remove('hidden');
            button.setAttribute('aria-expanded', 'true');
        } else {
            mobileMenu.classList.add('hidden');
            menuIcon.classList.remove('hidden');
            closeIcon.classList.add('hidden');
            button.setAttribute('aria-expanded', 'false');
        }
    }

    // Initialize Lucide icons
    document.addEventListener('DOMContentLoaded', function() {
        if (typeof lucide !== 'undefined') {
            lucide.createIcons();
        }
    });
</script>